@using Phi.MobileWebApp.Resources
@model Phi.MobileWebApp.Models.ResetPasswordViewModel
@{
    ViewBag.Title = GlobalResources.ResetPasswordPage;
}
<div class="forgotContainer">
<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>@GlobalResources.ResetYourPassword</h4>

    @Html.ValidationSummary("", new { @class = "textDanger" })
    @Html.HiddenFor(model => model.Code)
    @Html.LabelFor(m => m.Email, new { @class = "" })
    @Html.TextBoxFor(m => m.Email, new { @class = "" })
    @Html.LabelFor(m => m.Password, new { @class = "" })
    @Html.PasswordFor(m => m.Password, new { @class = "" })
    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "" })
    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "" })
    <input type="submit"  value="Reset" />
}
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
